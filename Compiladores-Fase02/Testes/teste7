//Erro, faltando ; na linha 8

function fatorial(n : Int) -> Int {
  if n <= 0 {
    return 1;
  }
  else {
    return n*fatorial(n-1)
  }
}

function imprima(before: Int, valor: Int, after: String, next: Boolean) {
  var i : Int;
  i = 0;
  while i < before {
    write("");
    i = i + 1;
  }
  writeln("");
  writeln(valor);
  writeln(after);
}

function main {
  imprima(50, fatorial(5)+2/fatorial(3), "Sera sempre assim");
}
